{
    "compilerOptions": {
      "esModuleInterop": true,
      "declaration": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "rootDir": "src",
      "outDir": "dist",
      "baseUrl": "./",
      "sourceMap": true,
      "strict": true,
      "target": "es2017",
      "lib": ["es7", "es2017"],
      "skipLibCheck": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules/**/*", "dist"]
  }
  